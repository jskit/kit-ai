/* pages/rmb/rmb.wxss */
.kit-rmb {
  font-size: 48rpx;
  color: #686b74;
}
.kit-grid {
  display: grid;
  grid-template-columns: auto;
  grid-template-rows: auto;
  grid-gap: 1px;
  border-bottom: 1px solid #e9eaec;
  background: #e9eaec;
}

.kit-grid-item {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f7f8fa;
}
.kit-grid-item:active {
  background: #f1f3f2;
}

.kit-grid-tpl {
  display: grid;
  grid-template-areas:
    "io"
    "keyboard";
  width: 100%;
  height: 100%;
  grid-template-columns: 1fr;
  grid-template-rows: auto;
}

.kit-grid-tpl .kit-grid-io { grid-area: io; }
.kit-grid-tpl .kit-grid-keyboard { grid-area: keyboard; }

.kit-grid-io {
  display: grid;
  height: 40vh;
  grid-template-areas:
    "input"
    "output";
  grid-template-columns: 1fr;
  grid-template-rows: auto;
}
.kit-grid-keyboard {
  display: grid;
  height: 60vh;
  grid-template-areas:
    "a7 a8 a9 ac"
    "a4 a5 a6 ac"
    "a1 a2 a3 del"
    "a0 a0 dot del";
  grid-template-columns: repeat(4, 1fr);
  grid-template-rows: auto;
}

.kit-grid-tpl.calculator {
  display: grid;
  grid-template-areas:
    "ac del percentage division"
    "a7 a8 a9 multiplication"
    "a4 a5 a6 subtraction"
    "a1 a2 a3 addition"
    "a0 a0 dot equal";
  grid-template-columns: auto;
  grid-template-rows: auto;
}
.kit-grid-tpl .a0 { grid-area: a0; }
.kit-grid-tpl .a1 { grid-area: a1; }
.kit-grid-tpl .a2 { grid-area: a2; }
.kit-grid-tpl .a3 { grid-area: a3; }
.kit-grid-tpl .a4 { grid-area: a4; }
.kit-grid-tpl .a5 { grid-area: a5; }
.kit-grid-tpl .a6 { grid-area: a6; }
.kit-grid-tpl .a7 { grid-area: a7; }
.kit-grid-tpl .a8 { grid-area: a8; }
.kit-grid-tpl .a9 { grid-area: a9; }
.kit-grid-tpl .ac { grid-area: ac; }
.kit-grid-tpl .dot { grid-area: dot; }
.kit-grid-tpl .del { grid-area: del; }
.kit-grid-tpl .addition { grid-area: addition; }
.kit-grid-tpl .subtraction { grid-area: subtraction; }
.kit-grid-tpl .multiplication { grid-area: multiplication; }
.kit-grid-tpl .division { grid-area: division; }
.kit-grid-tpl .percentage { grid-area: percentage; }
.kit-grid-tpl .reverse { grid-area: reverse; }
.kit-grid-tpl .equal { grid-area: equal; }
.kit-grid-tpl .input,
.kit-grid-tpl .output {
  padding: 16rpx 32rpx;
  /* height: 100%; */
  height: 20vh;
  overflow: hidden;
  /* align-self: end; */
  justify-content: flex-end;
  font-size: 56rpx;
  background: #f1f3f2;
  justify-items: end;
}
.kit-grid-tpl .input { grid-area: input; }
.kit-grid-tpl .output { grid-area: output; }
.kit-grid-tpl .output.small { font-size: 48rpx; }

.orange {
  color: #f2872e;
}

.kit-panel {
  margin: 32rpx 0;
}
.kit-panel .title {
  margin: 32rpx 0 16rpx;
  padding: 0 32rpx;
  font-size: 36rpx;
}
.kit-panel .content {
  margin: 16rpx 0;
  padding: 0 32rpx;
}

