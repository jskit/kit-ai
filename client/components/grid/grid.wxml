<template name="grid">
  <view class="grid">
    <block wx:for="{{list}}" wx:key="{{item.page}}">
      <view
      class="grid-item is-{{(item.status || todo)}}"
      bindtap="{{onItemTap}}"
      data-index="{{index}}"
      data-page="{{item.page}}"
      data-type="{{item.type}}"
      >
        <view class="grid-item-wrapper">
          <image
          wx:if="{{item.icon}}"
          src="{{item.icon}}"
          class="grid-icon"
          mode="aspectFit"
          />
          <text class="grid-text">{{item.title}}</text>
        </view>
      </view>
    </block>
  </view>
</template>
