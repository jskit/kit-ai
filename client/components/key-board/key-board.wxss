.kit-grid {
  display: grid;
  width: 100%;
  height: 100%;
  grid-template-columns: repeat(4, 1fr);
  grid-template-rows: repeat(4, 1fr);
  grid-gap: 1px;
  background: #ccc;
}

.kit-grid-item {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
}

.kit-grid-tpl {
  display: grid;
  grid-template-areas:
    "a7 a8 a9 ac"
    "a4 a5 a6 ac"
    "a1 a2 a3 del"
    "a0 a0 dot del";
  grid-template-columns: auto;
  grid-template-rows: auto;
}
.kit-grid-tpl.calculator {
  display: grid;
  grid-template-areas:
    "ac del percentage division"
    "a7 a8 a9 multiplication"
    "a4 a5 a6 subtraction"
    "a1 a2 a3 addition"
    "a0 a0 dot equal";
  grid-template-columns: auto;
  grid-template-rows: auto;
}
.kit-grid-tpl .a0 { grid-area: a0 }
.kit-grid-tpl .a1 { grid-area: a1 }
.kit-grid-tpl .a2 { grid-area: a2 }
.kit-grid-tpl .a3 { grid-area: a3 }
